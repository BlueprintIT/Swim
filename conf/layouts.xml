<?xml version="1.0"?>

<layouts default="default">
  <pagelayout id="base">
    <name>Basic Layout</name>
    <preferences>
      <preference name="page.template" value="global/template/base"/>
      <preference name="page.variables.title" value="New Page"/>
    </preferences>
    <blocklayout id="content" type="html">
      <name>Page Content</name>
      <description>Holds the main content of the page</description>
      <preferences>
        <preference name="block.class" value="HtmlBlock"/>
        <preference name="block.stylesheets" value="global/file/styles/content.css"/>
      </preferences>
    </blocklayout>
  </pagelayout>

  <pagelayout id="default" extends="base">
    <name>Default Layout</name>
    <preferences>
      <preference name="page.template" value="global/template/menu"/>
      <preference name="page.variables.title" value="New Page"/>
    </preferences>
  </pagelayout>

  <pagelayout id="trimage" extends="default">
    <name>Image in top right</name>
    <preferences>
      <preference name="page.template" value="global/template/topright"/>
    </preferences>
    <blocklayout id="image" type="image">
      <name>Background Image</name>
      <description>This image is places in the corner of the page, it should be 275x275.</description>
      <preferences>
        <preference name="block.class" value="ImageBlock"/>
      </preferences>
    </blocklayout>
  </pagelayout>
</layouts>
